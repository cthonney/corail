<div class="container-property">

  <div class="container-background-image">
    <div class="property-new-bar">
      <div id="title-property">What are you waiting for to add your own property?</div>
      <div>&#160&#160&#160</div>
      <div><%= link_to 'Add my Property', new_property_path, class:"search-button-info" %></div>
    </div>

    <div class="container-search-bar">

    <%= simple_form_for :search, url: properties_path, :method => :get do |f| %>
      <%= f.input :type,
                collection: ["Villa", "House", "Bungalow", "Flat", "All"],
                required: true,
                autofocus: true %>

      <%= f.input :city, :as => :hidden,
              input_html: { data: { :geocoder_target => "address" } },
              wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %>
      <%= f.button :submit, :class => "btn btn-primary" %>
    <% end %>






    </div>
  </div>

  <div class="property-cards-container">
    <div class="cards">
      <% @properties.each do |property| %>
        <div class="property-card">
          <%= cl_image_tag(property.photos.first.key, class:"property-cards-photos")%>
          <div class="property-card-text">
            <div class="property-card-type"><%= property.property_type %></div>
            <p><i class="fas fa-map-marker"> </i><%= property.address %></p>
            <p><i class="fas fa-coins"> </i> <%= property.price %> MUR</p>
            <%= link_to 'Show', property, class: "search-button-info"%>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
