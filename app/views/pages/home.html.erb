
<div class="homepage-container">
  <div class="homepage-search-section">
    <div>
      <h1 class="title-homepage">Find your dream house</h1>
      <h1 class="title-homepage highlight">without commission</h1>
      <h2>Type your city and fulfil your wishes!</h2>
      <input name class="homepage-search-bar" placeholder=" 📍 Type a city">
      <br><br>
      <button class="search-button" type="submit">Search</button>
    </div>

    <div class="map-container">
      <div id="map"
        style="width: 200; height: 600px; border-radius: 30px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>

  <div class="homepage-info-section">
    <div>
      <h2>Property Examples</h2>
      <%= link_to "Properties SHOW", properties_path %>
    </div>
    <%= image_tag "handshake.svg", alt: "handshake", style: "height:200px" %>
  </div>

  <div class="homepage-property-section">
    <h1 class="title-homepage">Last Releases:</h1>
    <div>
      <%= link_to "See all properties", properties_path %>
    </div>
  </div>
</div>
