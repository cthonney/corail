<div class="p-5 mx-auto" style="width: 800px;" >

  <div class="boxchat chatroom-title"><%= @chat_room.title %></div>
  <div class= "boxchat">
    <div id="messages" data-chat_room-id="<%= @chat_room.id %>">
      <% @chat_room.messages.each do |message| %>
        <div class="message-container" id="message-<%= message.id %>">
          <div class="author">
            <div class="chat-sender">Sender:&#160;<%= message.user.surname + " " + message.user.name%></div>
            <div class="chat-time">Time:&#160;<%= message.created_at.strftime("%a %b %e at %l:%M%p") %></div>
          </div>
          <div class="chat-content">Message:&#160;<%= message.content %></div>
        </div>
      <% end %>
    </div>
  </div>
  <div class= "boxtext">
    <%= simple_form_for [ @property, @chat_room, @message ] do |f| %>
      <%= f.input :content, input_html: {rows: 5, cols: 10}, label: false, placeholder: "Write your message" %>
      <%= f.submit "Send!", :class => "btn btn-primary"  %>
    <% end %>
  </div>
</div>

