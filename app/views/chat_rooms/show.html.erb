<h1>Chatroom: <%= @chat_room.title %></h1>
<div id="messages" data-chat_room-id="<%= @chat_room.id %>">
  <% @chat_room.messages.each do |message| %>
    <div class="message-container" id="message-<%= message.id %>">
      <i class="author">
        <span><%= message.user.surname %></span>
        <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
      </i>
      <p><%= message.content %></p>
    </div>
  <% end %>
</div>

<%= simple_form_for [ @chat_room, @message ] do |f| %>
  <%= f.input :content, label: false, placeholder: "Message ##{@chat_room.title}" %>
  <%= f.submit %>
<% end %>
